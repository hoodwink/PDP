<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/underscore.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/adminscripts")
    <script src="~/Scripts/jqGrid/grid.locale-en.js"></script>
    <script src="~/Scripts/jqGrid/jquery.jqGrid.min.js"></script>
    <link href="~/Content/ui.jqgrid-bootstrap.css" rel="stylesheet" />
    <link href="~/Scripts/jqGrid/css/ui.jqgrid-bootstrap.css" rel="stylesheet" />

    <style type="text/css" media="screen">
        th.ui-th-column div {
            white-space: normal !important;
            height: auto !important;
            padding: 2px;
        }

        .ui-jqgrid .ui-jqgrid-resize {
            height: 100% !important;
        }
    </style>


</head>
<body style="height:100%; min-height: 100%">
    <div class="container" ng-app="app">
        <div id="header" class="row">
            <div id="header-content" class="col-md-12">
                <div class="col-md-12 main-header"><div>Search PDP Database</div>
                </div>
            </div>
        </div>

        <div ng-app="app">
            @RenderBody()
            <hr />
        </div>

        @RenderSection("scripts", required: false)
    </div>
</body>
</html>
