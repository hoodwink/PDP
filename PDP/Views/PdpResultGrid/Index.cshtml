@{
   // Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Pdp Results";
}
@section head{
<link rel="stylesheet" href="../Content/font-awesome.min.css" />
<link rel="styleSheet" href="../Content/ui-grid.min.css" />
<script src="../Scripts/angular.min.js"></script>
<script src="../Scripts/ui-grid.min.js"></script>
}

<style>
.grid {
  width: 100%;
  height: 530px;
}
.tbl-header h2{
	margin: 3px;
}
.tbl-header label{
	margin-top: 5px;
}
</style>
<div > @* ng-app="appPdp" *@
<div ng-controller="MainCtrl">
	<div class="row tbl-header">
		<div class="col-lg-4 lg"><h2>Pdp Results</h2></div>
		<div class="col-lg-4 text-info">{{msg}}</div>
		<div class="col-lg-4 text-right">
			<label ng-hide="!loading" class="text-info">
				<i class="fa fa-refresh fa-spin fa-2x fa-fw"></i><span>Loading...</span>
			</label>
		</div>
	</div>
	<div class="row">
		<div id="grid1" ui-grid="gridResul" class="grid" ui-grid-resize-columns ui-grid-pagination ui-grid-selection ui-grid-edit ui-grid-exporter></div>
	</div>
</div>
</div>
@section scripts{
    <script src="../Scripts/app-pdpresult.js"></script>
}
